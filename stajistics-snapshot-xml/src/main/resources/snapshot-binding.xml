<binding>
  <namespace uri="http://www.stajistics.org/StatisticsSnapshot" default="none" prefix="ss" />

  <mapping name="snapshot" 
      class="org.stajistics.snapshot.binding.impl.jibx.XMLStatsSnapshot"
      ns="http://www.stajistics.org/StatisticsSnapshot"
      factory="org.stajistics.snapshot.binding.impl.jibx.XMLStatsSnapshot.factory">
    <value name="schemaVersion" field="schemaVersion" usage="required" />
    <value name="stajisticsVersion" field="stajisticsVersion" usage="required" />

    <structure name="timeSpan">
      <value name="start" field="startTimeStamp" usage="required" />
      <value name="end" field="endTimeStamp" usage="required" />
    </structure>

    <structure name="environment">
      <structure name="system" 
          field="systemEnvironment" 
          factory="org.stajistics.snapshot.binding.impl.jibx.XMLSystemEnvironment.factory">
        <value name="hostName" field="hostName" usage="required" />
        <structure field="properties" usage="optional" />
      </structure>
      <structure name="application" 
          field="applicationEnvironment"
          factory="org.stajistics.snapshot.binding.impl.jibx.XMLApplicationEnvironment.factory">
        <structure field="properties" usage="optional" />
      </structure>
    </structure>

    <structure name="sessions" 
        field="sessions"
        marshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.SessionsMapper" 
        unmarshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.SessionsMapper"
        usage="required" />

  </mapping>

  <mapping name="properties"
      class="java.util.HashMap"
      marshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.PropertiesMapper"
      unmarshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.PropertiesMapper" />

  <mapping name="session" 
      class="org.stajistics.snapshot.binding.impl.jibx.XMLSessionSnapshot">
    <structure field="key" usage="required" />
    <value name="trackerFactory" field="trackerFactory" usage="required" />
    <value name="sessionFactory" field="sessionFactory" usage="required" />
    <collection name="dataRecorders" 
        field="dataRecorders" 
        item-type="java.lang.String"
        usage="optional" >
      <value name="dataRecorder" />
    </collection>
    <value name="unit" field="unit" usage="required" />
    <structure field="dataSet" usage="required" />
  </mapping>

  <mapping name="key"
      class="org.stajistics.DefaultStatsKey"
      marshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.StatsKeyMapper"
      unmarshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.StatsKeyMapper" />

  <mapping name="dataSet"
      class="org.stajistics.data.DataSet" 
      marshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.DataSetMapper"
      unmarshaller="org.stajistics.snapshot.binding.impl.jibx.mapper.DataSetMapper" />

</binding>
